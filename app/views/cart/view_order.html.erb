<h2>My Cart</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @line_items.each do |line_item| %>
<tr>
<td><%= line_item.product.name %></td>
<td><%= number_to_currency line_item.product.price %></td>
<td><%= line_item.quantity %></td>
<td><%= number_to_currency line_item.line_item_total %></td>

<% end %>
</tr>
</tbody>
</table>


<div>
<%= link_to "Proceed to Checkout?", checkout_path, class: "btn btn-warning" %>
</div>
